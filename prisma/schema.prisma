generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model Car {
  id    String @id @default(cuid())
  rental Rental?
  rentalId String?
  name  String
  class String
  seats Int
  capacity String
  hasMileageLimit Boolean @default(false)
  mileageLimit Int?
  pricePerDay Int
  engine Decimal?
  typeOfFuel String?
  carCategory String
  carImage String?
  securityDeposit Int @default(0)
  city String
  isAvailable Boolean @default(true)
  isElectric Boolean @default(false)
  isAutomatic Boolean @default(false)
}

model Rental {
  id    String @id @default(cuid())
  car Car @relation(fields: [carId], references: [id])
  carId String @unique
  userId String
  pickupDate DateTime
  dropoffDate DateTime
  totalCost Int
  status String
  pickupLocation String
  dropoffLocation String
}